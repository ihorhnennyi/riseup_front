{
	"compilerOptions": {
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"baseUrl": "./",
		"paths": {
			"@components/*": ["src/components/*"],
			"@api/*": ["src/api/*"],
			"@pages/*": ["src/pages/*"],
			"@layouts/*": ["src/layouts/*"],
			"@hooks/*": ["src/hooks/*"],
			"@utils/*": ["src/utils/*"],
			"@assets/*": ["src/assets/*"],
			"@context/*": ["src/context/*"]
		}
	},
	"include": ["src"]
}
